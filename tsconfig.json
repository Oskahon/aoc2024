{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "checkJs": true,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": [
    "*"
  ],
  "exclude": [
    "./node_modules",
    "dist"
  ]
}